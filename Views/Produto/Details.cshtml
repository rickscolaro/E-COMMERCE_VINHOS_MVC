@model Produto

<div class="container marginTop">
    <div class="row">
        <div class="card border-0">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Url.Content(Model.Imagem)" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-block">
                <!--Title-->
                <h2 class="card-title">@Model.Nome</h2>
                <!--Text-->
                <p class="card-text">
                <h5>@Model.DescritaDetalhada</h5>
                </p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Produto" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                        asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.ProdutoId">
                        Adicionar @Model.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
