@model Projeto.Models.Produto

@{
    ViewData["Title"] = "Edit";
}
<h3>Editar Produto</h3>
<hr />
<form asp-action="Edit" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProdutoId" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescricaoCurta" class="control-label"></label>
        <textarea asp-for="DescricaoCurta" class="form-control"></textarea>
        <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescritaDetalhada" class="control-label"></label>
        <textarea asp-for="DescritaDetalhada" class="form-control"></textarea>
        <span asp-validation-for="DescritaDetalhada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="EmEstoque" class="control-label mt-2"></label>
        <input asp-for="EmEstoque" class="form-control" />
        <span asp-validation-for="EmEstoque" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Imagem" class="control-label"></label>
            <input asp-for="Imagem" class="form-control" />
            <span asp-validation-for="Imagem" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <img src="@Model.Imagem" />
        </div>
    </div>

    <div class="row">
        @* <div class="form-group col-sm-4">
            <label class="control-label">Marcar como Preferido?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
            <input class="form-check-input" asp-for="IsLanchePreferido" /> @Html.DisplayNameFor(model =>
            model.IsLanchePreferido)
            </label>
            </div> *@
        @* <div class="form-group col-sm-4">
            <label class="control-label">Marcar como em Estoque?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
            <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
            </label>
            </div> *@
        <div class="form-group col-sm-4">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
    </div>
</form>
